# Application Environment
NODE_ENV=development

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
# LLM_API_BASE=https://api.example.com/v1  # Optional: Custom API base URL

# MCP Configuration
# MCP_SERVER_URL=http://localhost:3000
MCP_MAX_RETRIES=3
MCP_TIMEOUT=30000

# Device Configuration
DEVICE_TYPE=both
# APPIUM_SERVER=http://localhost:4723
APPIUM_PORT=4723

# Execution Configuration
MAX_PARALLEL=1
EXECUTION_TIMEOUT=30000
RETRY_COUNT=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mcp-mobile-test.log
LOG_FORMAT=text

# Feature Flags
ENABLE_TRACING=false
ENABLE_METRICS=false
