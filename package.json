{
  "name": "mcp-mobile-test-ai",
  "version": "0.1.0",
  "description": "An intelligent mobile testing framework leveraging LLMs and MCP for automated mobile application testing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-mobile-test": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "bundle": "node scripts/bundle.mjs",
    "dev": "ts-node-esm --experimental-loader ts-node/esm/transpile-only src/index.ts",
    "dev:api": "ts-node-esm --experimental-loader ts-node/esm/transpile-only src/server/bin.ts",
    "start": "node dist/server/bin.js",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm install && npm run build",
    "build:all": "npm run build && npm run dashboard:build",
    "lint": "eslint . --ext .ts,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.mts,.cts --fix",
    "format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "test:api": "npx playwright test tests/api/*.spec.ts",
    "test:unit": "tsx --test tests/unit/**/*.test.ts",
    "test:select": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/smart-test-selector.ts",
    "test:select:json": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/smart-test-selector.ts --format json",
    "test:select:cmd": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/smart-test-selector.ts --format list --command \"npm test --\"",
    "test:docs": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/test-docs.ts",
    "test:docs:json": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/test-docs.ts --format json",
    "test:docs:html": "tsx --experimental-loader ts-node/esm/transpile-only src/cli/test-docs.ts --format html",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:test": "docker compose -f docker-compose.test.yml up --abort-on-container-exit --build",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build"
  },
  "keywords": [
    "mcp",
    "mobile",
    "testing",
    "automation",
    "appium",
    "llm",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@prisma/client": "^7.2.0",
    "@types/pixelmatch": "^5.2.6",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "pino": "^10.2.1",
    "pixelmatch": "^7.1.0",
    "prisma": "^7.2.0",
    "rotating-file-stream": "^3.2.7",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/node": "^22.10.6",
    "@types/pino-pretty": "^4.7.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
