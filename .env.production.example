# Production Environment Configuration
NODE_ENV=production

# LLM Configuration
LLM_PROVIDER=openai
# LLM_API_KEY should be set via actual environment variable or secret management
LLM_API_KEY=sk-prod-key-placeholder
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.3

# MCP Configuration
# MCP_SERVER_URL should be configured for production
# MCP_SERVER_URL=https://mcp-server.example.com
MCP_MAX_RETRIES=5
MCP_TIMEOUT=60000

# Device Configuration
DEVICE_TYPE=both
# APPIUM_SERVER should be configured for production
APPIUM_PORT=4723

# Execution Configuration
MAX_PARALLEL=5
EXECUTION_TIMEOUT=120000
RETRY_COUNT=2

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mcp-mobile-test.log
LOG_FORMAT=json

# Feature Flags
ENABLE_TRACING=true
ENABLE_METRICS=true
